{
  "name": "api-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node --experimental-strip-types --env-file=.env  ./src/index.ts",
    "dev": "tsx watch --env-file=.env ./src/index.ts",
    "db:push": "pnpm drizzle-kit push",
    "db:generate": "pnpm drizzle-kit generate",
    "db:drop": "pnpm drizzle-kit drop",
    "db:up": "pnpm drizzle-kit migrate",
    "db:seed": "pnpm tsx --env-file=.env ./src/common/infrastructure/seed.ts",
    "db:studio": "pnpm drizzle-kit studio"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "cookie-parser": "~1.4.6",
    "debug": "~4.3.7",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "express": "~4.21.0",
    "express-session": "^1.18.0",
    "http-errors": "~2.0.0",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^25.0.5",
    "morgan": "~1.10.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0"
  }
}
