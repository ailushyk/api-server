{
  "name": "api-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "tsx ./src/index.ts",
    "dev": "tsx watch --env-file=.env ./src/index.ts",
    "db:generate": "pnpm drizzle-kit generate --config=./src/config/drizzle.config.ts",
    "db:drop": "pnpm drizzle-kit drop --config=./src/config/drizzle.config.ts",
    "db:up": "pnpm drizzle-kit migrate --config=./src/config/drizzle.config.ts"
  },
  "dependencies": {
    "better-sqlite3": "^10.0.0",
    "cookie-parser": "~1.4.6",
    "debug": "~4.3.4",
    "drizzle-orm": "^0.30.10",
    "express": "~4.19.2",
    "http-errors": "~2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.10.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/better-sqlite3": "^7.6.10",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.8",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.21.2",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.3.0",
    "prettier": "^3.2.5",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0"
  }
}
